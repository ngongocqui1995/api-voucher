{
    "version": 2,
    "installCommand": "yarn install && yarn build",
    "builds": [
        {
            "src": "package.json",
            "use": "vercel-sapper"
        },
       { "src": "dist/main.js", "use": "@vercel/node" }
    ],
    "routes": [
       { "src": "/(.*)", "dest": "dist/main.js" }
    ]
 }